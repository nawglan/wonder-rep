<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Frame name="WonderRepOptionsFrame" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent" enableKeyboard="true">
		<Size>
			<AbsDimension x="470" y="380"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="WonderRepOptionsFrameHeader" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="256" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString inherits="GameFontNormal" text="WonderRep">
					<Anchors>
						<Anchor point="TOP" relativeTo="WonderRepOptionsFrameHeader">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="WonderRepOptions_ColorLabel" inherits="GameFontNormal" text="Color:">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="33" y="-225"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="WonderRepOptions_SessionTimeLabel" inherits="GameFontNormal" text="Session Time:">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="33" y="-275"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="WonderRepOptions_SessionTimeNumber" inherits="GameFontNormal" text="0">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="150" y="-275"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="WonderRepOptionsColorDropDown" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-240"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						WonderRepOptionsColorDropDown_OnLoad();
					</OnShow>
				</Scripts>
			</Button>
			<CheckButton name="WonderRepOptionsFrameAnnounce" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGANNOUNCE"));
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGANNOUNCETOOLTIP");
					</OnLoad>
					<OnClick>
						WonderRepOptions_AnnounceToggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="WonderRepOptionsFrameAutoBar" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-65"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGAUTOBAR"));
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGAUTOBARTOOLTIP");
					</OnLoad>
					<OnClick>
						WonderRepOptions_AutoBarToggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="WonderRepOptionsFrameBarChange" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-90"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGBARCHANGE"));
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGBARCHANGETOOLITP");
					</OnLoad>
					<OnClick>
						WonderRepOptions_BarChangeToggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="WonderRepOptionsFrameChat" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-115"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGCHAT"));
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGCHATTOOLTIP");
					</OnLoad>
					<OnClick>
						WonderRepOptions_ChatToggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="WonderRepOptionsFrameCombatLog" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="190" y="-115"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGCOMBAT"));
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGCOMBATTOOLTIP");
					</OnLoad>
					<OnClick>
						WonderRepOptions_ChatToggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="WonderRepOptionsFrameTime" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-140"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGTIMELEFT"));
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGTIMELEFTTOOLTIP");
					</OnLoad>
					<OnClick>
						WonderRepOptions_TimeToggle();
					</OnClick>
				</Scripts>
			</CheckButton>
			<Slider name="WonderRepSliderInterval" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="380" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-190" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGINTERVAL"));
						_G[self:GetName().."High"]:SetText();
						_G[self:GetName().."Low"]:SetText();
						self:SetMinMaxValues(0,500);
						self:SetValueStep(50);
						self.tooltipText = Localization.GetClientString("WonderRep", "DIALOGINTERVALTOOLTIP");
					</OnLoad>
					<OnValueChanged>
						Wr_save.AmountGainedLevel = self:GetValue();
						WonderRepOptions_IntervalSlider();
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGINTERVALVALUE") .. self:GetValue() .. "");
					</OnValueChanged>
				</Scripts>
			</Slider>
			<Button name="WonderRepFrameReset" inherits="OptionsButtonTemplate" text="Reset Session Time">
				<Size>
					<AbsDimension x="210" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="65"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGRESET"));
					</OnLoad>
					<OnClick>
						WonderRepOptions_ResetTime();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="WonderRepFrameHelp" inherits="OptionsButtonTemplate" text="Option Descriptions">
				<Size>
					<AbsDimension x="210" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGDESCRIPTIONS"));
					</OnLoad>
					<OnClick>
						WonderRep_PrintHelp();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="WonderRepOptionsFrameDone" inherits="OptionsButtonTemplate" text="Close">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="15"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(Localization.GetClientString("WonderRep", "DIALOGCLOSE"));
					</OnLoad>
					<OnClick>
						WonderRepOptions_Toggle();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
        _G["WonderRepOptions_ColorLabel"]:SetText(Localization.GetClientString("WonderRep","COLORLABEL"));
        _G["WonderRepOptions_SessionTimeLabel"]:SetText(Localization.GetClientString("WonderRep","SESSIONLABEL"));
				WonderRepOptions_OnLoad();
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
